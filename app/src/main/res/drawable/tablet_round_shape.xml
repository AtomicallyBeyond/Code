<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item
>

        <shape
            android:shape="oval">
            <solid
                android:color="@color/main_color"/>
            <size
                android:width="240dp"
                android:height="140dp"/>
        </shape>
    </item>


    <item
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp">

        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">

            <solid android:color="@color/black" />

        </shape>
    </item>


    <item
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp">

        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">

            <stroke android:color="#A9A9A9"
                android:width="2dp"/>

        </shape>
    </item>


</layer-list>