<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <shape
            android:shape="oval">

            <solid
                android:color="@color/main_color"/>

        </shape>
    </item>


    <item
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="0dp">

        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">

            <solid android:color="@color/black" />

        </shape>
    </item>


    <item
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="0dp">

        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">

            <stroke android:color="#A9A9A9"
                android:width="2dp"/>

        </shape>
    </item>


</layer-list>