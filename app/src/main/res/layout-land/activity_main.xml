<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_bar_layout"
        android:background="@color/white"/>



    <LinearLayout
        android:id="@+id/bottom_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/purple_700"
        android:orientation="horizontal" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="10dp"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/library_button_custom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:background="@drawable/shape"
                android:layout_weight="1.5">

                <ImageView
                    android:id="@+id/library_button_imageview"
                    android:layout_width="38dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/ic_books"
                    android:layout_gravity="bottom"/>

            </LinearLayout>



            <TextView
                android:id="@+id/library_button_textview"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/armata"
                android:includeFontPadding="true"
                android:text="LIBRARY"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textColor="@color/text_gray"
                android:textSize="16sp"
                android:background="@drawable/rounded_square"
                android:layout_weight="0.5"/>

        </LinearLayout>

v
        <LinearLayout
            android:id="@+id/gallery_button_custom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:background="@drawable/shape"
                android:layout_weight="1.5">

                    <ImageView
                    android:id="@+id/gallery_button_imageview"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="4dp"
                    android:layout_width="38dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_pallete"
                    android:layout_gravity="bottom"/>

            </LinearLayout>



            <TextView
                android:id="@+id/gallery_button_textview"
                android:layout_width="150dp"

                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/armata"
                android:includeFontPadding="true"
                android:text="MY ARTWORK"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textColor="@color/text_gray"
                android:textSize="16sp"
                android:background="@drawable/rounded_square"
                android:layout_weight="0.5"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>